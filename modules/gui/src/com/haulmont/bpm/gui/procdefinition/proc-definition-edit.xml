<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/5.5/window.xsd"
        caption="msg://editCaption"
        class="com.haulmont.bpm.gui.procdefinition.ProcDefinitionEdit"
        datasource="procDefinitionDs"
        focusComponent="fieldGroup"
        messagesPack="com.haulmont.bpm.gui.procdefinition">
    <dsContext>
        <datasource id="procDefinitionDs"
                    class="com.haulmont.bpm.entity.ProcDefinition"
                    view="procDefinition-edit">
            <collectionDatasource id="procRolesDs"
                                  property="procRoles"/>
        </datasource>
    </dsContext>
    <layout expand="tabSheet"
            spacing="true">
        <tabSheet id="tabSheet">
            <tab id="mainTab"
                 caption="msg://detailsTab"
                 expand="procRolesBox"
                 margin="true"
                 spacing="true">
                <fieldGroup id="fieldGroup"
                            datasource="procDefinitionDs">
                    <column width="250px">
                        <field id="name"/>
                        <field id="active"/>
                        <field id="actId"
                               editable="false"/>
                        <field id="actKey"
                               editable="false"/>
                    </column>
                </fieldGroup>
                <groupBox id="procRolesBox"
                          caption="msg://com.haulmont.bpm.entity/ProcDefinition.procRoles">
                    <table id="procRolesTable"
                           columnControlVisible="false"
                           height="100%"
                           presentations="false"
                           reorderingAllowed="false"
                           sortable="false"
                           width="100%">
                        <columns>
                            <column id="name"/>
                            <column id="code"/>
                        </columns>
                        <rows datasource="procRolesDs"/>
                    </table>
                </groupBox>
            </tab>
            <tab id="xmlTab"
                 caption="msg://xmlTab"
                 margin="true;false;false;false;"
                 spacing="true">
                <sourceCodeEditor id="xmlField"
                                  editable="false"
                                  height="100%"
                                  mode="XML"
                                  width="100%"/>
            </tab>
        </tabSheet>
        <iframe id="windowActions"
                screen="editWindowActions"
                stylename="window-actions"/>
    </layout>
</window>
