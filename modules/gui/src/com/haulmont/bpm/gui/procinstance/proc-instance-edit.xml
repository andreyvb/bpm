<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/5.5/window.xsd"
        caption="msg://editCaption"
        class="com.haulmont.bpm.gui.procinstance.ProcInstanceEdit"
        datasource="procInstanceDs"
        focusComponent="fieldGroup"
        messagesPack="com.haulmont.bpm.gui.procinstance">
    <dsContext>
        <datasource id="procInstanceDs"
                    class="com.haulmont.bpm.entity.ProcInstance"
                    view="procInstance-edit">
        </datasource>
        <collectionDatasource id="procTasksDs"
                              class="com.haulmont.bpm.entity.ProcTask"
                              view="procTask-procInstance-edit">
            <query>
                <![CDATA[
                select t from bpm$ProcTask t where t.procInstance.id = :ds$procInstanceDs order by t.startDate desc
                ]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="usersDs"
                              class="com.haulmont.cuba.security.entity.User"
                              view="_minimal">
            <query>
                <![CDATA[select u from sec$User u]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="procDefinitionsDs"
                              class="com.haulmont.bpm.entity.ProcDefinition"
                              view="procDefinition-procInstanceEdit">
            <query>
                <![CDATA[select e from bpm$ProcDefinition e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <layout expand="processTasksBox"
            spacing="true">
        <hbox spacing="true">
            <fieldGroup id="fieldGroup"
                        datasource="procInstanceDs">
                <column width="250px">
                    <field id="procDefinition"
                           optionsDatasource="procDefinitionsDs"/>
                    <field id="startedBy"
                           editable="false"/>
                    <field id="startDate"
                           editable="false"/>
                    <field id="endDate"
                           editable="false"/>
                    <field id="startComment"
                           editable="false" rows="3"/>
                    <field id="entityLink"
                           caption="msg://linkedEntity"
                           custom="true"/>
                    <field id="entityName"
                           custom="true" visible="false"/>
                    <field id="entityId"
                           custom="true" visible="false"/>
                    <field id="entityEditorName" visible="false"/>
                </column>
                <column width="350px">
                    <field id="cancelled"
                           editable="false" visible="false"/>
                    <field id="cancelComment"
                           editable="false" visible="false"/>
                </column>
            </fieldGroup>
            <groupBox id="procTaskActionsGroupBox"
                      caption="msg://processActions">
                <iframe id="procTaskActionsFrame"
                        screen="procTaskActionsFrame"/>
            </groupBox>
        </hbox>
        <hbox height="300px"
              spacing="true"
              width="100%">
            <groupBox id="procAttachmentsBox"
                      caption="msg://com.haulmont.bpm.entity/ProcInstance.procAttachments"
                      height="100%"
                      width="100%">
                <iframe id="procAttachmentsFrame"
                        height="100%"
                        screen="procAttachmentsFrame"/>
            </groupBox>
            <groupBox id="procActorsBox"
                      caption="msg://com.haulmont.bpm.entity/ProcInstance.procActors"
                      height="100%"
                      width="100%">
                <iframe id="procActorsFrame"
                        height="100%"
                        screen="procActorsFrame"/>
            </groupBox>
        </hbox>
        <groupBox id="processTasksBox"
                  caption="msg://com.haulmont.bpm.entity/ProcInstance.procTasks">
            <table id="procTasksTable"
                   height="100%"
                   width="100%">
                <columns>
                    <column id="locName"/>
                    <column id="procActor.user"/>
                    <column id="startDate"/>
                    <column id="endDate"/>
                    <column id="locOutcome"/>
                    <column id="comment"/>
                </columns>
                <rows datasource="procTasksDs"/>
            </table>
        </groupBox>
        <iframe id="windowActions"
                screen="extendedEditWindowActions"/>
        <!--<hbox id="windowActions"-->
              <!--spacing="true"-->
              <!--stylename="cuba-edit-window-actions">-->
            <!--<button id="windowCommitBtn"-->
                    <!--action="windowCommit"-->
                    <!--icon="icons/ok.png"/>-->
            <!--<button id="windowCloseBtn"-->
                    <!--action="windowClose"-->
                    <!--icon="icons/cancel.png"/>-->
        <!--</hbox>-->
    </layout>
</window>
