<?xml version="1.0" encoding="UTF-8" ?>

<definitions id="definitions"
             targetNamespace="http://activiti.org/bpmn20"
             xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
             xmlns:activiti="http://activiti.org/bpmn"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns:cuba="http://schemas.haulmont.com/bpm/5.5/bpm.xsd">

    <process id="bookScanning" name="Book scanning">

        <extensionElements>
            <activiti:eventListener class="com.haulmont.bpm.core.engine.listener.BpmActivitiListener"/>
            <cuba:procRoles>
                <cuba:procRole name="Manager" code="manager"/>
                <cuba:procRole name="Operator" code="operator"/>
            </cuba:procRoles>
            <cuba:localizations>
                <cuba:localization lang="en">
                    <![CDATA[
                            bookScanning = Book scanning
                            managerApproval = Manager approval
                            managerApproval.approve = Approve
                            managerApproval.reject = Reject
                            scanning = Scanning
                            scanning.success = Success
                            scanning.failed = Failed
                            failedScanningInspection = Fail inspection
                            failedScanningInspection.completed = Complete
                    ]]>
                </cuba:localization>
                <cuba:localization lang="ru">
                    <![CDATA[
                            bookScanning = Сканирование книги
                            managerApproval = Утверждение менеджером
                            managerApproval.approve = Утвердить
                            managerApproval.reject = Отклонить
                    ]]>
                </cuba:localization>
            </cuba:localizations>
        </extensionElements>

        <startEvent id="start">
            <extensionElements>
                <cuba:form name="standardProcessForm">
                    <cuba:param name="procActorsVisible">true</cuba:param>
                    <cuba:param name="procAttachmentsVisible">true</cuba:param>
                </cuba:form>
            </extensionElements>
        </startEvent>

        <sequenceFlow id="flow1" sourceRef="start" targetRef="setRolesScript" />

        <scriptTask id="setRolesScript" scriptFormat="groovy">
            <script>
                execution.setVariable("managerApproval_role", "manager")
                execution.setVariable("scanning_role", "operator")
                execution.setVariable("failedScanningInspection_role", "manager")
            </script>
        </scriptTask>

        <sequenceFlow id="flowSetRolesToApproval" sourceRef="setRolesScript" targetRef="managerApproval"/>

        <userTask id="managerApproval" name="Manager approval" activiti:assignee="#{prm.getSingleTaskAssignee(bpmProcInstanceId, managerApproval_role)}">
            <extensionElements>
                <cuba:outcomes>
                    <cuba:outcome name="approve">
                        <cuba:form name="standardProcessForm">
                            <cuba:param name="procAttachmentsVisible">true</cuba:param>
                        </cuba:form>
                    </cuba:outcome>
                    <cuba:outcome name="reject">
                        <cuba:form name="standardProcessForm">
                            <cuba:param name="procAttachmentsVisible">true</cuba:param>
                            <cuba:param name="commentRequired">true</cuba:param>
                        </cuba:form>
                    </cuba:outcome>
                </cuba:outcomes>
            </extensionElements>
        </userTask>

        <sequenceFlow id="flow2" sourceRef="managerApproval" targetRef="scanningApprovedDecision" />

        <exclusiveGateway id="scanningApprovedDecision" name="Scanning approved?" />

        <sequenceFlow id="flow3" sourceRef="scanningApprovedDecision" targetRef="scanning">
            <conditionExpression xsi:type="tFormalExpression">${outcome == 'approve'}</conditionExpression>
        </sequenceFlow>

        <sequenceFlow id="flow4" sourceRef="scanningApprovedDecision" targetRef="rejectedByManagerEnd">
            <conditionExpression xsi:type="tFormalExpression">${outcome == 'reject'}</conditionExpression>
        </sequenceFlow>

        <!--<userTask id="scanning" name="Scanning by operator" activiti:assignee="#{assignee}">-->
            <!--<extensionElements>-->
                <!--<cuba:outcomes>-->
                    <!--<cuba:outcome name="success">-->
                        <!--<cuba:form name="standardProcessForm">-->
                            <!--<cuba:param name="procAttachmentsVisible">true</cuba:param>-->
                        <!--</cuba:form>-->
                    <!--</cuba:outcome>-->
                    <!--<cuba:outcome name="failed">-->
                        <!--<cuba:form name="standardProcessForm">-->
                            <!--<cuba:param name="procAttachmentsVisible">true</cuba:param>-->
                            <!--<cuba:param name="commentRequired">true</cuba:param>-->
                        <!--</cuba:form>-->
                    <!--</cuba:outcome>-->
                <!--</cuba:outcomes>-->
            <!--</extensionElements>-->
            <!--<multiInstanceLoopCharacteristics isSequential="false"-->
                                              <!--activiti:collection="#{prm.getTaskAssigneeList(bpmProcInstanceId, scanning_role)}"-->
                                              <!--activiti:elementVariable="assignee" >-->
                <!--<completionCondition>#{outcome == 'failed'}</completionCondition>-->
            <!--</multiInstanceLoopCharacteristics>-->
        <!--</userTask>-->

        <userTask id="scanning" name="Scanning by operator" activiti:candidateUsers="#{prm.getTaskAssigneeList(bpmProcInstanceId, scanning_role)}">
            <extensionElements>
                <!--<cuba:params>-->
                    <!--<cuba:param name="role">operator</cuba:param>-->
                <!--</cuba:params>-->
                <cuba:outcomes>
                    <cuba:outcome name="success">
                        <cuba:form name="standardProcessForm">
                            <cuba:param name="procAttachmentsVisible">true</cuba:param>
                        </cuba:form>
                    </cuba:outcome>
                    <cuba:outcome name="failed">
                        <cuba:form name="standardProcessForm">
                            <cuba:param name="procAttachmentsVisible">true</cuba:param>
                            <cuba:param name="commentRequired">true</cuba:param>
                        </cuba:form>
                    </cuba:outcome>
                </cuba:outcomes>
            </extensionElements>
        </userTask>

        <sequenceFlow id="flow5" sourceRef="scanning" targetRef="scanningResultGateway"/>

        <exclusiveGateway id="scanningResultGateway" name="Scanned successfully?" />

        <sequenceFlow id="successfulScanFlow" sourceRef="scanningResultGateway" targetRef="scanSuccessfulEnd">
            <conditionExpression xsi:type="tFormalExpression"><![CDATA[ ${scanning_result.getOutcomesCount('failed') == 0}  ]]></conditionExpression>
        </sequenceFlow>

        <sequenceFlow id="notSuccessfulScanFlow" sourceRef="scanningResultGateway" targetRef="failedScanningInspection">
            <conditionExpression xsi:type="tFormalExpression"><![CDATA[ ${scanning_result.getOutcomesCount('failed') > 0}  ]]></conditionExpression>
        </sequenceFlow>

        <userTask id="failedScanningInspection" name="Failed scanning inspection"
                  activiti:assignee="#{prm.getSingleTaskAssignee(bpmProcInstanceId, failedScanningInspection_role)}">
            <extensionElements>
                <!--<cuba:params>-->
                <!--<cuba:param name="role">manager</cuba:param>-->
                <!--</cuba:params>-->
                <cuba:outcomes>
                    <cuba:outcome name="completed">
                        <cuba:form name="standardProcessForm">
                            <cuba:param name="procAttachmentsVisible">true</cuba:param>
                        </cuba:form>
                    </cuba:outcome>
                </cuba:outcomes>
            </extensionElements>
        </userTask>

        <sequenceFlow id="failedScanningInspectionEndFlow" sourceRef="failedScanningInspection" targetRef="scanFailedEnd"/>

        <endEvent id="rejectedByManagerEnd" />

        <endEvent id="scanSuccessfulEnd" />

        <endEvent id="scanFailedEnd" />

    </process>

</definitions>